    .social-icon:is(:hover,:focus-visible){transform: translateY(-4px) scale(1.1); box-shadow:0 15px 40px rgba(91,124,250,.45); outline:none}
    .social-icon.secondary{background:var(--surface); color:var(--text); border:2px solid var(--border)}
    .social-icon.secondary:is(:hover,:focus-visible){box-shadow:0 12px 30px rgba(0,0,0,.15); border-color:var(--brand); color:var(--brand)}
    /* Desktop social icons on all devices */

    /* Footer */
