    .project-header{display:flex; align-items:center; gap:12px; margin-bottom:14px}
    .project-visual{width:100%; height:140px; background:linear-gradient(135deg, var(--brand) 0%, var(--accent) 100%); border-radius:10px; margin-bottom:18px; display:flex; align-items:center; justify-content:center; font-size:22px; font-weight:900; color:white; text-align:center; padding:16px; box-shadow:0 10px 30px rgba(91,124,250,.25); text-shadow:0 2px 4px rgba(0,0,0,0.15); letter-spacing:-.01em}
    /* Desktop project layout on all devices */

    /* Skills */
    .skills{max-width:1000px; margin-inline:auto; grid-template-columns:repeat(auto-fit, minmax(280px, 1fr))}
    .skill-cat{padding:24px; transition:transform .3s ease, box-shadow .3s ease}
    .skill-cat:hover{transform:translateY(-4px); box-shadow:0 20px 60px rgba(2,6,23,.12)}
