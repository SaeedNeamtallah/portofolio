    .skill-list{display:flex; flex-wrap:wrap; gap:10px}
    /* Desktop skills grid on all devices */

    /* Experience */
    .timeline{display:grid; gap:20px; max-width:900px; margin-inline:auto}
    .xp{padding:24px; border-left:4px solid var(--brand-700); position:relative; transition:transform .3s ease, box-shadow .3s ease}
    .xp:hover{transform:translateX(8px); box-shadow:0 12px 40px rgba(2,6,23,.1)}
    .xp::before{content:''; position:absolute; left:-8px; top:24px; width:12px; height:12px; border-radius:50%; background:var(--brand-700); border:3px solid var(--surface)}
    .xp h4{font-size:1.15rem; font-weight:800; margin-bottom:6px}
    .xp .where{color:var(--brand-700); font-weight:700; margin-top:4px; font-size:1rem}
    .xp time{color:var(--muted-2); font-size:0.9rem}
    .xp ul{margin-top:12px}
    .xp li{margin-bottom:8px; line-height:1.6}
    /* Desktop timeline on all devices */

    /* Certs */
    .cert-grid{grid-template-columns:repeat(auto-fit, minmax(min(100%, 300px), 1fr))}
    .cert{overflow:hidden; transition:transform .3s ease, box-shadow .3s ease}
    .cert:hover{transform:translateY(-6px); box-shadow:0 20px 60px rgba(2,6,23,.15)}
    .cert img{width:100%; height:200px; object-fit:contain; background:var(--surface-2); border-bottom:1px solid var(--border); transition:transform .3s ease}
    .cert:hover img{transform:scale(1.05)}
    .cert .body{padding:20px}
    .cert h3{font-size:1.1rem; font-weight:700; margin-bottom:8px}
    /* Desktop certificate grid on all devices */

    /* Contact */
    .contact{background:linear-gradient(180deg, color-mix(in srgb, var(--brand) 18%, transparent), transparent); padding-block:clamp(60px, 8vw, 100px)}
